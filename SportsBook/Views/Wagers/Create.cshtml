@using SportsBook.Models

@{
    ViewData["Title"] = "Create";
}

@model CreateWager

<link href="/css/forms.css" rel="stylesheet" />  

@using (Html.BeginForm())
{

<div class="row">

<div class="panel panel-default">

    <div class="panel-heading">
        <b>@Model.AwayTeamFullName at @Model.HomeTeamFullName</b>
    </div>

    <div class="panel-body">

        <div class="fieldsets-group">
            <div class="fieldset">
                @Model.WagerGameTeamTeamName @Model.WagerGameTeamSpreadOfBet
            </div>
            <input type="hidden" id="Moneyline" value=@Model.WagerGameTeamSpreadMoneylineOfBet />
            <div class="fieldset">
                @Model.WagerGameTeamSpreadMoneylineOfBet
            </div>
        </div>

        <div class="fieldsets-group">
            <div class="fieldset">
                <label>Wager Amount </label>
                <input placeholder="11.00" type="text" id="WagerAmount">
            </div>
            <div class="fieldset">
                <label>Win Amount </label>
                <input placeholder="10.00" type="text" id="WinAmount">
            </div>
        </div>

        <div class="btn-row">
            <input type="button" value="Place Bet" class="btn btn-default" />
        </div>

    </div>
</div>

</div>

}

<script src="~/js/wagers.js"></script>
