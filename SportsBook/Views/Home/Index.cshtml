@using SportsBook.Models.Database

@{
    ViewData["Title"] = "Home Page";
}
@model List<Team>


@foreach (var team in Model)
{
    <div class='media'>
    <div class='media-img'>
        <img class='db media-img-item' src='/images/@team.HelmetImageFileName' width='300'>
    </div>
    <div class='media-content'>
        <p class='media-description'>
        @team.Location @team.Name
        </p>
        <ul class='media-meta'>
        <li class='media-meta-item'>
            27
            <span class='media-meta-label'>Likes</span>
        </li>
        <li class='media-meta-item'>
            11
            <span class='media-meta-label'>Comments</span>
        </li>
        </ul>
    </div>
    </div>    
}



